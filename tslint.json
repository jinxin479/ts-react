{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "src/**/*.test.tsx"
    ]
  },
  "rules": {
    "ordered-imports": [
      false
    ],
    "object-literal-sort-keys": [
      false
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "member-access": [
      false
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "max-classes-per-file": false
  }
}
